{
    "terminal.integrated.profiles.linux": {
        "acs (vagrant ssh)": {
            "path": "bash",
            "args": ["-c", "vagrant ssh acs"],
            "icon": "terminal-bash",
            "overrideName": true
        },
        "app (vagrant ssh)": {
            "path": "bash",
            "args": ["-c", "vagrant ssh app"],
            "icon": "terminal-bash",
            "overrideName": true
        },
        "zabbix (vagrant ssh)": {
            "path": "bash",
            "args": ["-c", "vagrant ssh zabbix"],
            "icon": "terminal-bash",
            "overrideName": true
        },
        "acs (connected via RemoteSSH)": {
            "path": "bash",
            "icon": "terminal-bash",
            "overrideName": true
        },
        // Remove unneeded terminals:
        "Azure Cloud Shell (Bash)": null,
        "Azure Cloud Shell (PowerShell)": null,
        "JavaScript Debug Terminal": null,
        "tmux": null,
        "pwsh": null
    },
    "terminal.integrated.profiles.windows": {
        "acs (vagrant ssh)": {
            "path": "powershell",
            "args": ["-NoLogo", "-Command", "vagrant ssh acs"],
            "icon": "terminal-powershell",
            "overrideName": true
        },
        "app (vagrant ssh)": {
            "path": "powershell",
            "args": ["-NoLogo", "-Command", "vagrant ssh app"],
            "icon": "terminal-powershell",
            "overrideName": true
        },
        "zabbix (vagrant ssh)": {
            "path": "powershell",
            "args": ["-NoLogo", "-Command", "vagrant ssh zabbix"],
            "icon": "terminal-powershell",
            "overrideName": true
        },
        "acs (connected via RemoteSSH)": {
            "path": "bash",
            "icon": "terminal-bash",
            "overrideName": true
        },
        // Remove unneeded terminals:
        "Azure Cloud Shell (Bash)": null,
        "Azure Cloud Shell (PowerShell)": null,
        "JavaScript Debug Terminal": null,
        "tmux": null
    },

    // Make sure the Ansible extension is using ansible-lint from the virtual env:
    // (this will only work when using Remote SSH to the acs)
    "ansible.python.interpreterPath": "/home/vagrant/venv-ansible/bin/python",
    "ansible.ansible.path": "/home/vagrant/venv-ansible/bin/ansible",
    "ansible.validation.lint.path": "/home/vagrant/venv-ansible/bin/ansible-lint",

    // Prevent line ending differences between Windows and Linux:
    "files.eol": "\n",

    // Open every .yml file as Ansible file.
    "files.associations": {
        "*.yml": "ansible"
    }
}
